<div id="outputContainer">
	<div id="controlsContainer"></div>
	<canvas id="targetCanvas" style="background: orangered"></canvas>
</div>

<style>
	#outputContainer {
		width: 100%;
		height: 100%;
		display: flex;
		position: relative;
		justify-content: center;
		align-items: center;
	}
	#outputContainer.error::after {
		content: 'ERROR';
		position: absolute;
		padding: 1rem;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		background: red;
		z-index: 1;
	}

	#targetCanvas {
		object-fit: contain;
		display: inline-block;
		max-height: 100%;
		max-width: 100%;
	}
</style>
